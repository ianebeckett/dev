[core]
    editor = nvim
	pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  line-numbers = true
  syntax-theme = gruvbox
  side-by-side = true
[diff]
	colorMoved = zebra
[merge]
    conflictStyle = zdiff3
[user]
    name = Ian Beckett
    email = ianedwardbeckett@gmail.com
[pull]
	rebase = true
[rebase]
  autoStash = true
[branch]
    sort=-committerdate
[tag]
    sort=-version:refname
[advice]
	defaultBranchName = false
