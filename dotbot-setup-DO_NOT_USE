sudo add-apt-repository ppa:neovim-ppa/unstable
sudo apt-get update

packages=(
   build-essential
   gdb
   libstdc++
   pthread
   git
   curl
   neovim
   tmux
   fzf
   ripgrep
   xclip
   tldr
   yt-dlp
   clang
   tree
)

for package in "${packages[@]}"; do
  sudo apt-get install -y $package
done

sudo sed -i 's/enabled=1/enabled=0/g' /etc/default/apport

tldr --update
